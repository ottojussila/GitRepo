<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HelloWorld.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Hello World">

    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label 
                Text="Hello World"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label 
                Text="Syötä nimesi:"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="NameEntry"
                Placeholder="Kirjoita nimesi tähän..."
                HorizontalOptions="Center"
                WidthRequest="300"
                HeightRequest="40" />

            <Button 
                x:Name="Button"
                Text="Lähetä"
                Clicked="OnButtonClicked"
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="40" />

            <Label 
                x:Name="Label"
                Text=""
                FontSize="20"
                TextColor="Blue"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>